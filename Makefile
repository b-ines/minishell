NAME = minishell
MAKEFLAGS += --no-print-directory
CFLAGS = -Wall -Werror -Wextra -g3 -O0
DEPENDENCIES = -lreadline -lncurses
CFILES = main/main.c main/signals.c main/early_parser.c\
	lexer/lexer.c lexer/lists.c lexer/debug.c lexer/tokenisation.c lexer/tokenisation_utils.c \
	parser/syntax_check.c expand/expand.c expand/expand_type.c expand/expand_utils.c \
	builtins/builtins.c \
	execve/exec.c execve/path.c
INCLUDES = -Ilexer
LIBFT = libft/libft.a
OBJ = $(CFILES:.c=.o)
LB = '\033[38;5;212m'

all: $(NAME) $(LIBFT)

$(NAME): $(OBJ) $(LIBFT)
	@echo $(LB)[[ ðŸ’» Compiling...]]
	@cc $(CFLAGS) $(INCLUDES) $(OBJ) -Llibft -lft -o $(NAME) $(DEPENDENCIES)
	@echo $(LB) $(CAT)
	@echo $(LB)[[ Done ðŸ’» ]]

.o:.c
	cc $(CLAGS) $(INCLUDES) $< -o $@

$(LIBFT):
	@make -C libft

clean:
	@echo $(LB)[[ Clean ðŸ’» ]]
	@make -C libft clean
	@rm -rf $(OBJ)

fclean: clean
	@make -C libft fclean
	@rm -rf $(NAME)

re: fclean all

rec: $(NAME) clean $(LIBFT)

.PHONY: all clean fclean re


